<% layout("/layouts/boilerplate") -%>
<body>
  <%= success %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
    }
    #filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }
    #filter:hover {
      opacity: 1;
      cursor: pointer;
    }
  </style>

  <div id="filters">
    <div id="filter">
      <div><i class="fa-solid fa-chart-line"></i></div>
      <p>Trending</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-home"></i></div>
      <p>Entire Homes</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-heart"></i></div>
      <p>Favorites</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-star"></i></div>
      <p>Top Rated</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-dollar-sign"></i></div>
      <p>Budget</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-globe"></i></div>
      <p>Global</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Nature</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-utensils"></i></div>
      <p>Food</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-plane"></i></div>
      <p>Travel</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Outdoors</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-gem"></i></div>
      <p>Luxury</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-spa"></i></div>
      <p>Relax</p>
    </div>
    <div id="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>City</p>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="text-decoration-none">
      <div class="card col" style="width: 20rem">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b> <br /></p>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
